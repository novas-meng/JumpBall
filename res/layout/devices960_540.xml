<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/devices"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/btbg"
    >
    
    <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_alignParentBottom = "true"
	  android:layout_marginBottom="40dp"
	  android:id= "@+id/bt_bottombar">	  
		
		<ImageButton 
		    android:id="@+id/start_service"
			android:layout_width="132dp" 	 		
			android:layout_height="70dp"  
			android:scaleType="centerInside"
			android:background="@null"
			android:layout_marginLeft="110dip"
			android:src="@drawable/start_service"/> 			
		<ImageButton 
		    android:id="@+id/start_seach"
			android:layout_width="132dp" 
			android:layout_height="70dp" 
			android:scaleType="centerInside"
			android:layout_marginLeft="10dip"
			android:background="@null" 
			android:src="@drawable/begin"/> 
		<ImageButton android:id="@+id/enter"
			android:layout_width="132dp"
			android:layout_height="70dp"
			android:scaleType="centerInside"  
			android:background="@null"
			android:layout_marginLeft="15dip"
			android:src="@drawable/game_begin"/> 		
	</LinearLayout>  

	 <ListView  
	    android:id="@+id/ListView"
	    android:layout_above="@+id/bt_bottombar"
	    android:layout_width="420dip"  
	    android:layout_height="120dip" 
	    android:scrollingCache="false" 
	    android:layout_weight="1.0" 
	    android:divider="#00000000"
       android:dividerHeight="10dp"
       android:paddingLeft="80dip"
       android:overScrollMode="never"
       android:fadingEdgeLength="0px"
       android:layout_marginBottom="1dip"
	    />
</RelativeLayout>